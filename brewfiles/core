brew "fisher"    # Fish plugin manager
brew "tmux"      # Terminal multiplexer
brew "starship"  # Shell prompt

# Terminal enhancements
brew "bat"       # Cat clone with syntax highlighting
brew "eza"       # Modern replacement for ls
brew "procs"     # Modern replacement for ps
brew "btop"      # Resource monitor
brew "tailspin"  # Modern log file viewer
brew "figlet"    # ASCII banner generator
brew "hyperfine" # Command-line benchmarking tool
brew "lolcrab"   # Rainbow text output
brew "tldr"      # Simplified man pages with examples

# ==============================================================================
# File Management and Search
# ==============================================================================
